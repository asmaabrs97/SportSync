@model SportSync.Models.ViewModels.MedicalInfoViewModel
@{
    ViewData["Title"] = "Medical Information";
}

<div class="auth-container">
    <div class="auth-form">
        <h1>MEDICAL SITUATION</h1>
        
        <form asp-action="MedicalInfo" asp-controller="Auth" method="post">
            <div class="form-group">
                <label asp-for="MedicalConditions">Medical Conditions:</label>
                <input asp-for="MedicalConditions" class="form-control" />
                <span asp-validation-for="MedicalConditions" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Allergies">Allergies:</label>
                <input asp-for="Allergies" class="form-control" />
                <span asp-validation-for="Allergies" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DietaryRestrictions">Dietary Restrictions:</label>
                <input asp-for="DietaryRestrictions" class="form-control" />
                <span asp-validation-for="DietaryRestrictions" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EmergencyContactName">Emergency Contact Name:</label>
                <input asp-for="EmergencyContactName" class="form-control" required />
                <span asp-validation-for="EmergencyContactName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EmergencyContactPhone">Emergency Contact Phone:</label>
                <input asp-for="EmergencyContactPhone" class="form-control" required />
                <span asp-validation-for="EmergencyContactPhone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AdditionalNotes">Additional Notes (things we need to know about you):</label>
                <textarea asp-for="AdditionalNotes" class="form-control" rows="4"></textarea>
                <span asp-validation-for="AdditionalNotes" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">CONTINUE</button>
        </form>
    </div>
</div>

<style>
    .auth-container {
        min-height: 100vh;
        background-color: #1a1a1a;
        background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 1000"><rect width="100%" height="100%" fill="%231a1a1a"/><circle cx="10" cy="10" r="1" fill="%234a90e2" opacity="0.3"/></svg>');
        background-size: 20px 20px;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2rem;
        color: white;
    }

    .auth-form {
        background: rgba(40, 40, 40, 0.9);
        padding: 2rem;
        border-radius: 10px;
        width: 100%;
        max-width: 500px;
    }

    .auth-form h1 {
        text-align: center;
        margin-bottom: 2rem;
        color: #e85d04;
        font-weight: bold;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-control {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: white;
        padding: 0.75rem;
        border-radius: 5px;
        width: 100%;
    }

    .form-control:focus {
        background: rgba(255, 255, 255, 0.15);
        border-color: #e85d04;
        outline: none;
    }

    textarea.form-control {
        resize: vertical;
        min-height: 100px;
    }

    .btn-primary {
        background-color: #e85d04;
        border: none;
        padding: 1rem;
        width: 100%;
        border-radius: 5px;
        color: white;
        font-weight: bold;
        margin-top: 1rem;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .btn-primary:hover {
        background-color: #dc2f02;
    }

    .text-danger {
        color: #ff4444;
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
