@model SportSync.Models.ViewModels.RegistrationViewModel
@{
    ViewData["Title"] = "Create Your Account";
}

<div class="auth-container">
    <div class="auth-form">
        <h1>CREATE YOUR ACCOUNT</h1>
        
        <form asp-action="Register" asp-controller="Auth" method="post">
            <div class="form-group">
                <label asp-for="FullName">Full Name:</label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email">Email Address:</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Username">Username:</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password">Password:</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword">Confirm Password:</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DateOfBirth">Date of Birth:</label>
                <input asp-for="DateOfBirth" type="date" class="form-control" placeholder="DD/MM/YY" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber">Phone Number:</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Gender">Gender:</label>
                <div class="gender-options">
                    <label>
                        <input type="radio" asp-for="Gender" value="Male" /> Male
                    </label>
                    <label>
                        <input type="radio" asp-for="Gender" value="Female" /> Female
                    </label>
                </div>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="form-group checkbox-group">
                <label>
                    <input asp-for="IsOver14" type="checkbox" />
                    I am 14 years or older
                </label>
                <span asp-validation-for="IsOver14" class="text-danger"></span>
            </div>

            <div class="form-group checkbox-group">
                <label>
                    <input asp-for="AcceptTerms" type="checkbox" />
                    I agree to the Terms of Service and Privacy Policy
                </label>
                <span asp-validation-for="AcceptTerms" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">CREATE ACCOUNT</button>
        </form>

        <div class="social-login">
            <button class="google-login">
                <img src="~/images/google-icon.png" alt="Google" />
                Sign up with Google
            </button>
            <button class="apple-login">
                <img src="~/images/apple-icon.png" alt="Apple" />
                Sign up with Apple
            </button>
        </div>
    </div>
</div>

<style>
    .auth-container {
        min-height: 100vh;
        background-color: #1a1a1a;
        background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 1000"><rect width="100%" height="100%" fill="%231a1a1a"/><circle cx="10" cy="10" r="1" fill="%234a90e2" opacity="0.3"/></svg>');
        background-size: 20px 20px;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2rem;
        color: white;
    }

    .auth-form {
        background: rgba(40, 40, 40, 0.9);
        padding: 2rem;
        border-radius: 10px;
        width: 100%;
        max-width: 500px;
    }

    .auth-form h1 {
        text-align: center;
        margin-bottom: 2rem;
        color: #e85d04;
        font-weight: bold;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-control {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: white;
        padding: 0.75rem;
        border-radius: 5px;
        width: 100%;
    }

    .form-control:focus {
        background: rgba(255, 255, 255, 0.15);
        border-color: #e85d04;
        outline: none;
    }

    .gender-options {
        display: flex;
        gap: 2rem;
    }

    .checkbox-group {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-primary {
        background-color: #e85d04;
        border: none;
        padding: 1rem;
        width: 100%;
        border-radius: 5px;
        color: white;
        font-weight: bold;
        margin-top: 1rem;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .btn-primary:hover {
        background-color: #dc2f02;
    }

    .social-login {
        margin-top: 2rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .social-login button {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        padding: 0.75rem;
        border-radius: 5px;
        border: none;
        cursor: pointer;
        font-weight: bold;
        transition: opacity 0.3s;
    }

    .social-login button:hover {
        opacity: 0.9;
    }

    .google-login {
        background-color: white;
        color: black;
    }

    .apple-login {
        background-color: black;
        color: white;
    }

    .social-login img {
        width: 24px;
        height: 24px;
    }

    .text-danger {
        color: #ff4444;
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
