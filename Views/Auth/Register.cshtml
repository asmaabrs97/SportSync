@model SportSync.Models.ViewModels.RegistrationStepsViewModel
@{
    ViewData["Title"] = "Create Your Account";
}

<div class="auth-container">
    <div class="auth-form">
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <ul>
                    @foreach (var modelError in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@modelError.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <div class="steps-indicator">
            <div class="step @(Model.CurrentStep == 1 ? "active" : "")">
                <span class="step-number">1</span>
                <span class="step-title">Authentication</span>
            </div>
            <div class="step @(Model.CurrentStep == 2 ? "active" : "")">
                <span class="step-number">2</span>
                <span class="step-title">Medical Situation</span>
            </div>
            <div class="step @(Model.CurrentStep == 3 ? "active" : "")">
                <span class="step-number">3</span>
                <span class="step-title">Documents</span>
            </div>
        </div>

        @if (Model.CurrentStep == 1)
        {
            <partial name="_AuthenticationStep" model="Model.Authentication" />
        }
        else if (Model.CurrentStep == 2)
        {
            <partial name="_MedicalStep" model="Model.MedicalInfo" />
        }
        else
        {
            <partial name="_DocumentsStep" model="Model.Documents" />
        }
    </div>
</div>

<style>
    .auth-container {
        min-height: 100vh;
        background-color: #1a1a1a;
        background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 1000"><rect width="100%" height="100%" fill="%231a1a1a"/><circle cx="10" cy="10" r="1" fill="%234a90e2" opacity="0.3"/></svg>');
        background-size: 20px 20px;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2rem;
    }

    .auth-form {
        background: rgba(255, 255, 255, 0.05);
        padding: 2rem;
        border-radius: 15px;
        width: 100%;
        max-width: 600px;
        backdrop-filter: blur(10px);
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
    }

    .steps-indicator {
        display: flex;
        justify-content: space-between;
        margin-bottom: 2rem;
        padding: 1rem;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 10px;
    }

    .step {
        display: flex;
        flex-direction: column;
        align-items: center;
        color: #666;
    }

    .step.active {
        color: #4a90e2;
    }

    .step-number {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        background: #333;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 0.5rem;
        font-weight: bold;
    }

    .step.active .step-number {
        background: #4a90e2;
        color: white;
    }

    .step-title {
        font-size: 0.9rem;
        text-align: center;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-group label {
        display: block;
        margin-bottom: 0.5rem;
        color: #fff;
    }

    .form-control {
        width: 100%;
        padding: 0.75rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        background: rgba(255, 255, 255, 0.05);
        color: #fff;
    }

    .form-control:focus {
        border-color: #4a90e2;
        outline: none;
        box-shadow: 0 0 0 2px rgba(74, 144, 226, 0.25);
    }

    .btn-primary {
        width: 100%;
        padding: 0.75rem;
        background: #4a90e2;
        border: none;
        border-radius: 8px;
        color: #fff;
        font-weight: 600;
        transition: background-color 0.2s;
    }

    .btn-primary:hover {
        background: #357abd;
    }

    .text-danger {
        color: #ff4444;
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }

    .checkbox-group {
        display: flex;
        align-items: center;
        margin: 1rem 0;
    }

    .checkbox-group input[type="checkbox"] {
        margin-right: 0.5rem;
    }

    .checkbox-group label {
        color: #fff;
        font-size: 0.9rem;
    }

    .file-upload {
        border: 2px dashed rgba(255, 255, 255, 0.2);
        padding: 1.5rem;
        border-radius: 8px;
        text-align: center;
        margin-bottom: 1rem;
    }

    .file-upload:hover {
        border-color: #4a90e2;
        cursor: pointer;
    }

    .alert {
        margin-bottom: 1rem;
        padding: 1rem;
        border-radius: 8px;
    }

    .alert-danger {
        background-color: rgba(255, 0, 0, 0.1);
        border: 1px solid rgba(255, 0, 0, 0.2);
        color: #ff4444;
    }

    .alert ul {
        margin: 0;
        padding-left: 1.5rem;
    }

    .alert li {
        margin-bottom: 0.5rem;
    }

    .alert li:last-child {
        margin-bottom: 0;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
