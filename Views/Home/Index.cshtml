@{
    ViewData["Title"] = "Discover Our Sports";
}

<div class="text-center">
    <div class="discover-sports">
        <h1 class="display-4">DISCOVER OUR <span class="text-primary">SPORTS</span></h1>
        <p class="lead">A variety of sports disciplines for all levels!</p>
        
        <div class="sports-hero">
            <img src="~/images/sports-hero.jpg" alt="Sports collage" class="img-fluid" />
            <a href="/disciplines" class="btn btn-primary btn-lg mt-4">JOIN US NOW!</a>
        </div>
    </div>
</div>

<style>
.discover-sports {
    padding: 2rem 0;
    background-color: #1a1a1a;
    color: white;
    min-height: 80vh;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.sports-hero {
    max-width: 1200px;
    margin: 2rem auto;
    position: relative;
}

.sports-hero img {
    width: 100%;
    border-radius: 10px;
    box-shadow: 0 0 20px rgba(0,0,0,0.3);
}

.btn-primary {
    background-color: #007bff;
    border: none;
    padding: 1rem 3rem;
    font-size: 1.2rem;
    border-radius: 30px;
    text-transform: uppercase;
    font-weight: bold;
    transition: all 0.3s ease;
}

.btn-primary:hover {
    transform: scale(1.05);
    box-shadow: 0 0 15px rgba(0,123,255,0.5);
}
</style>
