@model SportSync.Models.ViewModels.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Admin Dashboard</h1>

    <!-- Statistics Cards -->
    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total Users</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Statistics.TotalUsers</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Active Users</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Statistics.ActiveUsers</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-check fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Disciplines Management -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Disciplines Management</h6>
            <a href="@Url.Action("AddDiscipline", "Admin")" class="btn btn-primary btn-sm">
                <i class="fas fa-plus"></i> Add New Discipline
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="disciplinesTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Active Sessions</th>
                            <th>Registered Users</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var discipline in Model.Disciplines)
                        {
                            <tr>
                                <td>@discipline.Name</td>
                                <td>@discipline.Description</td>
                                <td>@discipline.ActiveSessions</td>
                                <td>@discipline.RegisteredUsers</td>
                                <td>
                                    <div class="btn-group">
                                        <form asp-action="ToggleDisciplineStatus" asp-route-id="@discipline.Id" method="post" style="display: inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn @(discipline.IsActive ? "btn-success" : "btn-secondary") btn-sm">
                                                <i class="fas @(discipline.IsActive ? "fa-toggle-on" : "fa-toggle-off")"></i>
                                            </button>
                                        </form>
                                        <a href="@Url.Action("EditDiscipline", "Admin", new { id = discipline.Id })" class="btn btn-warning btn-sm">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form asp-action="DeleteDiscipline" asp-route-id="@discipline.Id" method="post" style="display: inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this discipline?');">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Sessions Management -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Sessions Management</h6>
            <a href="@Url.Action("AddSession", "Admin")" class="btn btn-primary btn-sm">
                <i class="fas fa-plus"></i> Add New Session
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="sessionsTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Discipline</th>
                            <th>Coach</th>
                            <th>Location</th>
                            <th>Start Time</th>
                            <th>End Time</th>
                            <th>Capacity</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var session in Model.Sessions)
                        {
                            <tr>
                                <td>@session.SportName</td>
                                <td>@session.CoachName</td>
                                <td>@session.Location</td>
                                <td>@session.StartTime.ToString("g")</td>
                                <td>@session.EndTime.ToString("g")</td>
                                <td>@session.CurrentParticipants / @session.MaxCapacity</td>
                                <td>
                                    <a href="@Url.Action("EditSession", "Admin", new { id = session.Id })" class="btn btn-warning btn-sm">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form asp-action="DeleteSession" asp-route-id="@session.Id" method="post" style="display: inline;">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this session?');">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- User Management -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">User Management</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="usersTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td>@user.Email</td>
                                <td>@user.Role</td>
                                <td>@(user.IsActive ? "Active" : "Inactive")</td>
                                <td>
                                    <form asp-action="DeleteUser" asp-route-userId="@user.Id" method="post" style="display: inline;">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this user?');">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#usersTable').DataTable();
            $('#disciplinesTable').DataTable();
            $('#sessionsTable').DataTable();
            
            // Show success messages
            @if (TempData["Message"] != null)
            {
                <text>
                toastr.success('@TempData["Message"]');
                </text>
            }
        });
    </script>
}
